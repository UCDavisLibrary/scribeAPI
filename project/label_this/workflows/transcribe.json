{
    "name": "transcribe",
    "label": "Transcribe Workflow",
    "retire_limit": 3,
    "generates_subjects": true,
    "generates_subjects_for": "verify",
    "generates_subjects_after": 1,
    "generates_subjects_max": 2,
    "generates_subjects_method": "collect-unique",
    "tasks": {
        "text": {
            "tool": "textTool",
            "tool_config": {
                "limit": 500,
                "multiline": true
            },
            "instruction": "Please tell us what the highlighted text says.",
            "next_task": null,
            "generates_subject_type": "transcribed_text"
        },

        "image": {
            "tool": "textTool",
            "tool_config": {
                "limit": 100,
                "multiline": false,
                "suggest": "common"
            },
            "instruction": "Please tell us what this image is depicting, using one or two words.",
            "next_task": null,
            "generates_subject_type": "transcribed_image"
        }
    }
}
