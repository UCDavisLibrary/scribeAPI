<%= paginator.render do %>
  <ul aria-label="Pagination" class="pagination text-center column" role="pagination">
    <%= prev_page_tag unless current_page.first? %>
    <%= first_page_tag unless current_page < 4 %>
    
    <% each_page do |page| %>
      <% if page.left_outer? || page.right_outer? || page.inside_window? %>
        <%= page_tag page %>
      <% elsif !page.was_truncated? %>
        <%= gap_tag %>
      <% end %>
    <% end %>
    <%= last_page_tag unless current_page >= (total_pages - 4)  %>
    <%= next_page_tag unless current_page.last? %>
    
  </ul>
<% end %>
